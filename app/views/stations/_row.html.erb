
<div class="record-row <%= cycle "odd", "even", name: "row-cycler" %> flexbox vertical stretch">

  <%station.docked_bike_count = Bike.where(:current_station_id => station.identifier).all.count%>
  <%station.save%>
  <%= station.identifier %>: <%= station.name %> (<%= station.address %>)<br>Docked Bikes (<%= station.docked_bike_count %>):
<% if Bike.where(:current_station_id => station.identifier).present? %>
        <% Bike.where(:current_station_id => station.identifier).all.each do |bike| %>
          
	  <br>---- Bike <%= bike.identifier%>
    
	<% end %>
      <% else %>
      <div class="empty">
        No bikes found.
      </div>
      <% end %>
</div>
