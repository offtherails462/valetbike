<h1>Log into ValetBike</h1>

<p>
  <%= form_with url: login_path do |f| %>
  <p>
    <%= f.label 'E-mail' %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label 'Password' %>
    <%= f.password_field :password %>
    <%= link_to 'Forgot Password', password_reset_path %>
  </p>
  <p>
    <%= f.submit 'Log in!' %>
  </p>
  <% end %>
</p>